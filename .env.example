# ======================================================
# .env.example
# Adaptive Scholarship Matching + AI Drafting
# Template for local development and Claude Code context
# ======================================================

# =======================
# üîß GENERAL SETTINGS
# =======================
APP_NAME=adaptive-scholarship-ai
APP_ENV=development
NODE_ENV=development
PYTHON_ENV=dev
PORT=8000

# =======================
# üíæ DATABASE SETTINGS
# =======================
# PostgreSQL connection string used by backend (FastAPI)
# Format: postgresql://<USER>:<PASSWORD>@<HOST>:<PORT>/<DB_NAME>
DATABASE_URL=postgresql://postgres:password@localhost:5432/scholarship_ai

# Optional: Enable SQL echo logging for debugging
SQLALCHEMY_ECHO=false

# =======================
# ü§ñ AI / LLM SETTINGS
# =======================
# Anthropic Claude API key (required for LLM integration)
CLAUDE_API_KEY=sk-your-api-key-here

# Optional: Claude model configuration
CLAUDE_MODEL=claude-3-sonnet
CLAUDE_TEMPERATURE=0.7
CLAUDE_MAX_TOKENS=2048

# =======================
# üåê FRONTEND SETTINGS
# =======================
# Frontend app URL (Vite React client)
VITE_APP_ENV=development
VITE_API_BASE=http://localhost:8000
FRONTEND_URL=http://localhost:5173

# =======================
# üß† AI MODULE SETTINGS
# =======================
# Paths used by backend for loading prompt files
PROMPTS_DIR=.claude/prompts
SCHEMA_PATH=.claude/utils/schema_examples.md
TESTCASE_PATH=.claude/utils/testcases.md

# =======================
# üìä LOGGING / DEBUGGING
# =======================
# Enable debug mode for local LLM tracing
DEBUG_MODE=true
LOG_LEVEL=info
ENABLE_PROMPT_LOGGING=true
LOG_FILE=logs/app.log

# =======================
# üß© OPTIONAL SERVICES
# =======================
# (Optional) External embedding or storage systems
REDIS_URL=redis://localhost:6379
EMBEDDING_MODEL=openai/text-embedding-3-small

# =======================
# üîí SECURITY
# =======================
# Flask/FastAPI JWT secret (replace for production)
SECRET_KEY=replace_me_with_secure_value
ACCESS_TOKEN_EXPIRE_MINUTES=60

# =======================
# üß± MISC
# =======================
# Static data locations for internal testing
SCHOLARSHIP_DATA_PATH=data/scholarships.json
WINNER_ESSAYS_PATH=data/winner_essays/
CLUSTERS_OUTPUT_PATH=data/clusters.json

# ======================================================
# ‚ö†Ô∏è NOTE:
# Copy this file to `.env` or `.env.local` before running.
# NEVER commit your real CLAUDE_API_KEY or DATABASE_URL.
# ======================================================
