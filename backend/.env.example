# ======================================================
# Backend Environment Configuration - ScholarLens
# Copy this to .env and update with your values
# ======================================================

# =======================
# üîß APPLICATION SETTINGS
# =======================
APP_ENV=development
DEBUG=true
LOG_LEVEL=info

# =======================
# üíæ DATABASE SETTINGS
# =======================
# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=postgresql://postgres:password@localhost:5432/scholarlens_dev

# SQLAlchemy options
SQLALCHEMY_ECHO=false  # Set true to see SQL queries in console

# =======================
# ü§ñ CLAUDE API SETTINGS
# =======================
CLAUDE_API_KEY=your-claude-api-key-here
CLAUDE_MODEL=claude-3-sonnet-20240229
CLAUDE_TEMPERATURE=0.7
CLAUDE_MAX_TOKENS=2048

# =======================
# üìÅ FILE PATHS
# =======================
PROMPTS_DIR=../.claude/prompts
SCHEMA_PATH=../.claude/utils/schema_examples.md
TESTCASE_PATH=../.claude/utils/testcases.md

# =======================
# üîí SECURITY
# =======================
SECRET_KEY=your-secret-key-here-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=60

# =======================
# üåê CORS SETTINGS
# =======================
FRONTEND_URL=http://localhost:5173
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# =======================
# üìä LOGGING
# =======================
ENABLE_API_LOGGING=true  # Log all Claude API calls to database
LOG_FILE=logs/app.log
